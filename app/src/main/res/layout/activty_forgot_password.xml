<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:padding="24dp">

    <!-- Title Text -->
    <TextView
        android:id="@+id/tv_forgot_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="24sp"
        android:textColor="@color/primaryText"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/tv_forgot_password_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your username to reset your password."
        android:textSize="14sp"
        android:textColor="@color/secondaryText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot_password_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <!-- Username EditText -->
    <EditText
        android:id="@+id/et_forgot_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="Enter your username"
        android:inputType="text"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/primaryText"
        android:textColorHint="@color/secondaryText"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot_password_instruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Reset Password Button -->
    <Button
        android:id="@+id/btn_reset_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Reset Password"
        android:textColor="@color/white"
        android:backgroundTint="@color/buttonBackground"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@id/et_forgot_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Terms and Conditions Text -->
    <TextView
        android:id="@+id/tv_terms_and_conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By resetting your password, you agree to our Terms and Conditions."
        android:textSize="12sp"
        android:textColor="@color/secondaryText"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_reset_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <!-- Privacy Policy Text -->
    <TextView
        android:id="@+id/tv_privacy_policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read our Privacy Policy"
        android:textSize="12sp"
        android:textColor="@color/buttonBackground"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_terms_and_conditions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

</androidx.constraintlayout.widget.ConstraintLayout>
